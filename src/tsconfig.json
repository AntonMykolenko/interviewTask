{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es6",
        "lib": [
            "es2019"
        ],
        "module": "commonjs",
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}